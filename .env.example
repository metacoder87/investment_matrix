# PostgreSQL / TimescaleDB
POSTGRES_USER=user
POSTGRES_PASSWORD=pass
POSTGRES_DB=cryptoinsight
DATABASE_URL=postgresql+psycopg2://user:pass@db:5432/cryptoinsight

# Redis / Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Streaming defaults
CORE_UNIVERSE=BTC-USD,ETH-USD,SOL-USD
STREAM_EXCHANGE=COINBASE
# Optional: stream from multiple exchanges (comma-separated); overrides STREAM_EXCHANGE when set.
# STREAM_EXCHANGES=COINBASE,BINANCE,KRAKEN

# Solara UI assets
# `true` = server proxies/caches JS/CSS so the browser doesn't need CDN access.
SOLARA_ASSETS_PROXY=true

# Optional plugin keys (leave blank for zero-cost core)
NEWS_API_KEY=
COINMARKETCAP_API_KEY=
FINANCIALMODELINGPREP_API_KEY=
NEWSDATAIO_API_KEY=
COINPAPRIKA_API_KEY=
STOCKGEIST_API_KEY=
SANTIMENT_API_KEY=
LUNARCRUSH_API_KEY=
CRYPTOCOMPARE_API_KEY=
